{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist/lib",
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "skipLibCheck": true,
      "isolatedModules": true,
      "allowImportingTsExtensions": true,
      "noEmit": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
  }